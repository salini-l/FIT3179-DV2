{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Distribution of Annual Temperature Anomalies by Decade in Australia",
  "width": 800,
  "height": 400,

  "data": {
    "url": "https://raw.githubusercontent.com/salini-l/FIT3179-DV2/refs/heads/main/box_plot/data/temp_change_country_year.csv"
  },

  "params": [
    { "name": "dec1960", "value": true,  "bind": {"input": "checkbox", "name": " 1960s "} },
    { "name": "dec1970", "value": true,  "bind": {"input": "checkbox", "name": " 1970s "} },
    { "name": "dec1980", "value": true,  "bind": {"input": "checkbox", "name": " 1980s "} },
    { "name": "dec1990", "value": true,  "bind": {"input": "checkbox", "name": " 1990s "} },
    { "name": "dec2000", "value": true,  "bind": {"input": "checkbox", "name": " 2000s "} },
    { "name": "dec2010", "value": true,  "bind": {"input": "checkbox", "name": " 2010s "} }
  ],

  "transform": [
    { "filter": "datum.Area == 'Australia'" },
    { "calculate": "floor(datum.Year/10)*10", "as": "DecadeNum" },
    { "calculate": "toString(datum.DecadeNum)", "as": "Decade" },
    { "filter": "datum.DecadeNum >= 1960 && datum.DecadeNum <= 2010" },

    { "filter": "!(dec1960 || dec1970 || dec1980 || dec1990 || dec2000 || dec2010) || ((dec1960 && datum.Decade == '1960') || (dec1970 && datum.Decade == '1970') || (dec1980 && datum.Decade == '1980') || (dec1990 && datum.Decade == '1990') || (dec2000 && datum.Decade == '2000') || (dec2010 && datum.Decade == '2010'))" },

    {
      "density": "TempChange_C",
      "groupby": ["Decade"],
      "extent": [-1, 3],
      "steps": 100
    }
  ],

  "mark": { "type": "area", "opacity": 0.4, "interpolate": "monotone" },

  "encoding": {
    "x": { "field": "value", "type": "quantitative", "title": "Temperature Anomaly (°C)" },
    "y": { "field": "density", "type": "quantitative", "title": "Density" },
    "color": {
      "field": "Decade",
      "type": "nominal",
      "title": "Decade",
      "scale": { "scheme": "purples" },
      "sort": ["1960","1970","1980","1990","2000","2010"],
      "domain": ["1960","1970","1980","1990","2000","2010"]   
    },

    "tooltip": [
      { "field": "Decade", "title": "Decade" },
      { "field": "value", "title": " Temperature Anomaly (°C)", "format": "+.2f" },
      { "field": "density", "title": "Density", "format": ".3f" }
    ]
  },

  "config": {
    "axis": { "gridColor": "#dddddd", "gridOpacity": 0.3 },
    "view": { "stroke": null },
    "legend": { "titleFontSize": 12, "labelFontSize": 11, "orient": "top" }
  }
}
